@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <h3 class="card-header bg-info text-white">@employee.Name</h3>
            <div class="text-center">
                <img asp-append-version="true" class="card-img-top" src="@photoPath" style="width:250px;height:auto;" />
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary btn-a m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary btn-a m-1">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger btn-a m-1">Delete</a>
            </div>
        </div>
    }
</div>