@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<br />
<h1>Login User</h1>
<br />

<div class="container border bg-light p-5">
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="form-group row">
            <div class="col-3 text-info">
                <label asp-for="Username"></label>
            </div>
            <input asp-for="Username" class="col-6 form-control" />
        </div>
        <span asp-validation-for="Username" class="text-danger font-weight-bolder"></span>
        <hr />
        <div class="form-group row">
            <div class="col-3 text-info">
                <label asp-for="Password"></label>
            </div>
            <input asp-for="Password" class="col-6 form-control" />
        </div>
        <span asp-validation-for="Password" class="text-danger font-weight-bolder"></span>
        <hr />
        <div class="form-group row">
            <div class="offset-3 custom-checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">Login</button>
            </div>
            <div class="col-3">
                <a asp-controller="home" asp-action="index" class="btn btn-danger form-control">Cancel</a>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger font-weight-bolder"></div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}